    <script>
      const universitySelect = document.getElementById("university");
      const instituteSelect = document.getElementById("institute");

      // Fetch and populate universities
      async function loadUniversities() {
        try {
          const response = await fetch("/universities");
          const universities = await response.json();
          universitySelect.innerHTML =
            '<option value="" disabled selected>Select University</option>';
          universities.forEach((university) => {
            const option = document.createElement("option");
            option.value = university.name;
            option.textContent = university.name;
            universitySelect.appendChild(option);
          });
        } catch (error) {
          console.error("Error loading universities:", error);
        }
      }

      // Fetch and populate institutes based on selected university
      async function updateInstitutes() {
        const selectedUniversity = universitySelect.value;
        if (!selectedUniversity) {
          instituteSelect.innerHTML =
            '<option value="" disabled selected>Select Institute</option>';
          return;
        }

        try {
          const response = await fetch(
            `/institutes/${encodeURIComponent(selectedUniversity)}`
          );
          const institutes = await response.json();
          instituteSelect.innerHTML =
            '<option value="" disabled selected>Select Institute</option>';
          institutes.forEach((institute) => {
            const option = document.createElement("option");
            option.value = institute.name;
            option.textContent = institute.name;
            instituteSelect.appendChild(option);
          });
        } catch (error) {
          console.error("Error loading institutes:", error);
        }
      }

      // Load universities on page load
      window.addEventListener("DOMContentLoaded", loadUniversities);

      // Update institutes when a university is selected
      universitySelect.addEventListener("change", updateInstitutes);

      function saveOptions() {
        const option2 = document.getElementById("institute").value;
        const option3 = document.getElementById("university niveau").value;
        localStorage.setItem("option2", option2);
        localStorage.setItem("option3", option3);
        // Redirect to /cards only if both options are filled
        window.location.href = "/cards";
      }
    </script>
    <script>
      document
        .getElementById("pfeForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = Object.fromEntries(formData.entries());

          try {
            const response = await fetch("/PFE", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (response.status === 401 && result.redirect) {
              window.location.href = "/login"; // force page redirect
              return;
            }

            if (response.ok) {
              alert(result.message); // success
              this.reset();
            } else {
              alert(result.message); // error from backend
            }
          } catch (error) {
            alert("Une erreur r√©seau s'est produite. Veuillez r√©essayer.");
